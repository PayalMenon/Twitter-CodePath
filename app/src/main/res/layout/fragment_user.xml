<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rl_user_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_banner_height"
            android:layout_marginBottom="30dp"
            android:scaleType="fitXY"/>
        
        <ImageView
            android:id="@+id/iv_user_image"
            android:layout_width="@dimen/imageWidth"
            android:layout_height="@dimen/imageHeight"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="@dimen/user_margin_left"
            android:scaleType="fitXY"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fl_image_layout"
        android:layout_marginLeft="@dimen/user_margin_left"
        android:layout_marginTop="@dimen/user_margin_top"
        android:textSize="@dimen/tweet_text_size"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_user_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_user_name"
        android:layout_marginLeft="@dimen/user_margin_left"
        android:layout_marginTop="@dimen/user_margin_top"
        android:textSize="@dimen/tweet_text_size"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_user_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_user_username"
        android:layout_marginLeft="@dimen/user_margin_left"
        android:layout_marginTop="@dimen/user_margin_top"
        android:textSize="@dimen/tweet_text_size"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_user_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_user_tagline"
        android:layout_marginLeft="@dimen/user_margin_left"
        android:layout_marginTop="@dimen/user_margin_top"
        android:textSize="@dimen/tweet_text_size"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_user_following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_tagline"
        android:layout_marginLeft="@dimen/user_margin_left"
        android:layout_marginTop="@dimen/user_margin_top"
        android:layout_toRightOf="@id/tv_user_followers"
        android:textSize="@dimen/tweet_text_size"
        android:textColor="@android:color/black"/>

</RelativeLayout>
