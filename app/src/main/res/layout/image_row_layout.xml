<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="@dimen/tweetMarginTop"
    android:layout_marginBottom="@dimen/tweetMarginTop"
    card_view:cardCornerRadius="@dimen/cardCorberRadius"
    card_view:cardElevation="@dimen/cardElevation">

    <ImageView
        android:id="@+id/iv_detail_tweet_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_tweet_image_height"
        android:scaleType="fitXY"/>

</android.support.v7.widget.CardView>
